APPLICATION = driver_ad5242
include ../Makefile.tests_common

USEMODULE += shell shell_commands ad5242

TEST_AD5242_OPTIONS ?= AD5242_CHN_A
TEST_AD5242_I2C_DEV ?= I2C_DEV\(0\)
TEST_AD5242_I2C_ADDR ?= 0x2c

CFLAGS += -DDEVELHELP
CFLAGS += -DTEST_AD5242_OPTIONS=$(TEST_AD5242_OPTIONS)
CFLAGS += -DTEST_AD5242_I2C_DEV=$(TEST_AD5242_I2C_DEV)
CFLAGS += -DTEST_AD5242_I2C_ADDR=$(TEST_AD5242_I2C_ADDR)

include $(RIOTBASE)/Makefile.include
